{# {% extends 'base.html.twig' %} #}

{% block stylesheets %}
    <style>
        body {
            background-image: url('{{ asset("images/puzzle-background.jpg") }}');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            font-family: Arial, sans-serif;
            color: #fff;
        }

        .puzzle-container {
            background-color: rgba(0, 0, 0, 0.6);
            padding: 40px;
            max-width: 400px;
            margin: 100px auto;
            border-radius: 10px;
            text-align: center;
        }

        input, button {
            padding: 10px;
            width: 100%;
            margin-top: 10px;
            border: none;
            border-radius: 5px;
        }

        button {
            background-color: #28a745;
            color: white;
            font-weight: bold;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="puzzle-container">
        <h2>Welcome to the Word Puzzle Game</h2>

        <form method="post">
            <label for="student_name">Enter your name:</label>
            <input type="text" id="student_name" name="student_name" required>

            <button type="submit">Start Game</button>
            <br></br>
            <a class="leaderboard-link" href="{{ path('leaderboard') }}">View Leaderboard</a>
        </form>
    </div>
{% endblock %}
